{
  "name": "flashcard",
  "version": "1.0.0",
  "description": "Flashcard App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p watch:*",
    "prepare": "husky",
    "build": "run-s build:*",
    "build:ejs": "npm run @11ty/eleventy --input=src/ejs --output=dist",
    "build:static": "cpx \"src/static/**/*\" dist",
    "build:sass": "run-s build:sass:*",
    "build:sass:compile": "sass src/sass/:dist/assets/css --no-source-map -s compressed",
    "build:sass:postcss": "postcss dist/assets/css/**/*.css --dir dist/assets/css --no-map --verbose",
    "build:ts": "node scripts/esbuild.js",
    "rebuild": "run-s rebuild:*",
    "rebuild:clean": "node scripts/distClean.js",
    "rebuild:build": "run-s build:*",
    "watch:ejs": "npm run @11ty/eleventy --watch --quiet",
    "watch:sass": "run-p watch sass:*",
    "watch:sass:compile": "sass --watch src/sass/:dist/assets/css -no-source-map -s compressed",
    "watch:sass:postcss": "postcss -w dist/assets/css/**/*.css --dir dist/assets/css --no-map",
    "watch:ts": "node scripts/esbuild.js --watch",
    "watch:static": "cpx \"src/static/**/*\" dist --watch",
    "watch:browser": "node scripts/server.js",
    "lint": "run-p lint:*",
    "lint:vlint": "vlint",
    "lint:css": "vlint --css",
    "lint:stylelint": "stylelint src/sass/",
    "lint:ts": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taka7115/flashcard.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/taka7115/flashcard/issues"
  },
  "homepage": "https://github.com/taka7115/flashcard#readme",
  "volta": {
    "node": "16.17.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@mitsue/vlint": "^0.8.1",
    "@typescript-eslint/parser": "^5.39.0",
    "autoprefixer": "^10.4.12",
    "connect-ssi": "^1.1.1",
    "cpx": "^1.5.0",
    "cssnano": "^5.1.13",
    "ejs": "^3.1.8",
    "esbuild": "^0.15.10",
    "eslint": "^8.25.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-normalize": "^10.0.1",
    "postcss-normalize-charset": "^5.1.0",
    "postcss-scss": "^4.0.5",
    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.8.4",
    "vue": "^3.2.40",
    "vue-loader": "^17.0.0",
    "vue-router": "^4.1.5"
  }
}
